<html>
    <head>
        <title>Homepage</title>
        <link rel="stylesheet" href="./styles.css">
    </head>
    <body>
        <div class="main-content">
            <h1><%= title %></h1>
            <ul>
                <% messages.forEach((message) => { %>
                    <li>
                        <strong><%= message.user %>:</strong> <%= message.text %> <br>
                        <small><%= message.added.toLocaleString() %></small>
                        <a href="/message/ <%= message.id %>"><button>Show message details</button></a>
                    </li>
                <% }); %>
            </ul>
            <a href="/new"><button>New message</button></a>
        </div>
    </body>
</html>